<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.myharbour.dao.CargoAttrMapper">
    <resultMap id = "cargoattr" type="cargoattr">
        <id property="cargoTypeId" column="cargo_type_id"/>
        <result property="cargoName" column="cargo_name"/>
        <result property="type" column="container_type"/>
        <result property="unitType" column="unit_type"/>
        <result property="valid" column="valid"/>
    </resultMap>

    <select id="getValidGargoAttr" resultType="cargoattr" parameterType="cargoattr">
        SELECT * FROM cargo_attr_table WHERE valid = 1
        <if test="cargoTypeId != null">
            AND cargo_type_id = #{cargoTypeId}
        </if>
        <if test="cargoName != null">
            AND cargo_name = #{cargoName}
        </if>
        <if test="type != null">
            AND container_type = #{type}
        </if>
        <if test="unitType != null">
            AND unit_type = #{unitType}
        </if>
    </select>

    <select id="getUnvalidGargoAttr" resultType="cargoattr" parameterType="cargoattr">
        SELECT * FROM cargo_attr_table WHERE valid = 0
        <if test="cargoTypeId != null">
            AND cargo_type_id = #{cargoTypeId}
        </if>
        <if test="cargoName != null">
            AND cargo_name = #{cargoName}
        </if>
        <if test="type != null">
            AND container_type = #{type}
        </if>
        <if test="unitType != null">
            AND unit_type = #{unitType}
        </if>
    </select>

    <select id="getGargoAttrById" resultType="cargoattr" parameterType="int">
        SELECT * FROM cargo_attr_table WHERE cargo_type_id = #{id}
    </select>

    <insert id="insertCargoAttr" parameterType="cargoattr">
        INSERT into cargo_attr_table VALUES (#{cargoTypeId},#{cargoName},#{type},#{unitType},1)
    </insert>

    <update id="updateCargoAttr" parameterType="cargoattr">
        UPDATE cargo_attr_table
        <trim prefix="SET" prefixOverrides=",">
            <if test="cargoTypeId != null">
                , cargo_type_id = #{cargoTypeId}
            </if>
            <if test="cargoName != null">
                , cargo_name = #{cargoName}
            </if>
            <if test="type != null">
                , container_type = #{type}
            </if>
            <if test="unitType != null">
                , unit_type = #{unitType}
            </if>
            <if test="valid != null">
                , valid = #{valid}
            </if>
        </trim>
        WHERE cargo_type_id = #{cargoTypeId}
    </update>
</mapper>